<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:clickable="false"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/statusColorBar"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|center_vertical|center_horizontal"
                android:background="@color/apnacareBlue">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.8">

                <TextView
                    android:id="@+id/txt_pharmacy_name"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    tools:text="Pharmacy"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#333"
                    android:layout_marginBottom="0dp" />

                <TextView
                    android:id="@+id/txt_pharma_number"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/txt_pharma_number"
                    android:layout_marginLeft="5dp"
                    tools:text="Phone Number"
                    android:singleLine="true"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/txt_pharmacy_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/txt_pharmacy_email"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="@dimen/md_keylines"
                    tools:text="Pharmacy Email ID"
                    android:ellipsize="end"
                    android:textColor="#333"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/txt_pharmacy_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/txt_pharmacy_email"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="@dimen/md_keylines"
                    tools:text="Pharmacy Location"
                    android:ellipsize="end"
                    android:textColor="#333"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/txt_pharmacy_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/txt_pharmacy_email"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="@dimen/md_keylines"
                    tools:text="Pharmacy City"
                    android:ellipsize="end"
                    android:textColor="#333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txt_pharmacy_name"
                    android:background="#045283"/>

                <LinearLayout
                    android:layout_below="@id/line"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:gravity="left|center_vertical|center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="50dp"
                        android:id="@+id/sendPrescription"
                        android:layout_weight="0.5"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Send Prescription "/>

                    <FrameLayout
                        android:background="#045283"
                        android:visibility="gone"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>

                    <Button
                        android:background="@drawable/ic_create_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:tag=""
                        android:id="@+id/btnEdit"
                        android:text=""
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_weight="0.17" />

                    <Button
                        android:background="@drawable/ic_delete_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:tag=""
                        android:id="@+id/btnDelete"
                        android:text=""
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_weight="0.17" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
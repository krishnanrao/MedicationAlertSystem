                    <EditText
                        android:id="@+id/ph_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Mobile number"
                        android:maxLength="10"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000" />
